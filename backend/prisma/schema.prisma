model User {
  id        String   @id
  email     String   @unique
  name      String?
  avatar    String?
  provider  String // "google"
  createdAt DateTime @default(now())

  analyses Analysis[]
}

model Analysis {
  id             Int      @id @default(autoincrement())
  userId         String
  hn             String?
  modelUsed      String // YOLOv8, CNN-v2
  result         String // Positive / Negative
  detectMetadata Json // ตำแหน่งของเชื้อในภาพ
  confidence     Float?
  createdAt      DateTime @default(now())

  user   User          @relation(fields: [userId], references: [id])
  images ImageUpload[]
}

model ImageUpload {
  id         Int      @id @default(autoincrement())
  analysisId Int
  filename   String
  imageUrl   String
  uploadedAt DateTime @default(now())

  analysis Analysis @relation(fields: [analysisId], references: [id])
}
